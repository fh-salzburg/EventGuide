<%= render 'menu', { :permission => @permission } %>
<div id="left_column">
	<%= render 'eventlist' %>
</div>

<div id="right_column">
	<h1>User</h1>
	<%=link_to "Benutzer anlegen", new_user_path %>
	
	<h2>Guides</h2>
	<table>
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>E-Mail</td>
			<td>Aktion</td>
		</tr>		
		<% @adminUsers.each do |a| %>
		<tr>
			<td><%= a.id %></td>
			<td><%= a.name %></td>
			<td><%= a.email %></td>
			<td>Passwort &auml;ndern | <%= link_to "bearbeiten", edit_user_path(a) %> | <%= link_to "löschen", user_path(a), :method => :delete, :confirm => "Wirklich löschen?"%></td>
		</tr>
	<% end %>
	</table>
	
	<h2>Admins</h2>
	<table>
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>E-Mail</td>
			<td>Aktion</td>
		</tr>
		<% @guides.each do |a| %>
		<tr>
			<td><%= a.id %></td>
			<td><%= a.name %></td>
			<td><%= a.email %></td>
			<td>Passwort &auml;ndern | Bearbeiten | L&ouml;schen</td>
		</tr>
	<% end %>		
	</table>
</div>