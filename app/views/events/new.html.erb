<%= render 'menu', { :permission => @permission } %>
<div id="left_column">
	<%= render 'eventlist' %>
</div>

<div id="right_column">	
<h1>Event erstellen</h1>

<%= form_for @event do |e| %>
  <% if @event.errors.any? %>
    <div class="error_messages">
      <h3>Es sind folgende Fehler aufgetreten:</h3>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <p>
    <%= e.label :isAStation, "Typ" %>
    <%= radio_button :event, :isAStation, true, :id => "radioButtonStation" %> Station oder Quiz
	<%= radio_button :event, :isAStation, false, :id => "radioButtonEvent" %> Event
  </p>
    <p>
    <%= e.label :name, "Titel" %>
    <%= e.text_field :name, :size => "70" %>
  </p>
  <p>
    <%= e.label :room, "Raum" %>
    <%= e.text_field :room, :size => "70" %>
  </p>
  <p>
    <%= e.label :short_description, "Untertitel" %>
    <%= e.text_area :short_description, :size => "52x1" %>  	
  </p>
   <p>
    <%= e.label :description, "Beschreibung" %>
    <%= e.text_area :description, :size => "52x5" %>  	
  </p> 
   <p>
    <%= e.label :image, "Bild" %>
    <%= e.file_field :image %>  	
  </p> 
  <p class="select_date" >
    <%= e.label :time_from, "Von" %>
    <%= e.datetime_select :time_from%>  	
  </p>
  <p class="select_date">
    <%= e.label :time_to, "Bis" %>
    <%= e.datetime_select :time_to %>  	
  </p>
  <p class="button"><%= e.submit %></p>
<% end %>
</div>