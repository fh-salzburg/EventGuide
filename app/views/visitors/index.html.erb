<%= render 'menu', { :permission => @permission } %>
<div id="left_column">
	<%= render 'eventlist' %>
</div>

<div id="right_column">
	<h1>Besucher</h1>
	<%=link_to "Besucher erstellen", new_visitor_path, :class => "block_link_visitor" %>

	<%= form_tag(search_visitor_path , :id => "search_form") do %>
	    <%= label_tag :searchValue, "Nach Nummer suchen: " %>
	    <%= search_field_tag :searchValue %>
	    <%= submit_tag "Go!" %>
	<% end %>
	<br/>
	<h3><%= @listtitle %></h3>
	<table id="visitors_list">
		<tr class="tr_header">
			<td>
				<span class="number">#</span>
				<span class="name">Name</span>
				<span class="interests">Interessen</span>
				<span class="action">Aktion</span>
			</td>
		</tr>
		<% @visitors.each do |v| %>
			<tr>
				<td>
					<span class="number"><%= v.number %></span>
					<span class="name">
						<span class="star"><%= v.number_of_stars%></span>
						<%= v.name %>
					</span>
					<span class="interests"><%= v.interests %></span>
					<span class="action">
						<%= link_to image_tag("star_plus.png", :height => "25"), give_star_path(v), :confirm => "Stern wirklich vergeben?" %> 
						<%= link_to image_tag("edit.png", :height => "25"), edit_visitor_path(v) %> 
						<%= link_to image_tag("delete.png", :height => "25"), visitor_path(v), :method => :delete, :confirm => "Wirklich lÃ¶schen?"%>
					</span>
				</td>
			</tr>
		<% end %>
	</table>
</div>
